<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#E60005</item>
        <item name="colorPrimaryDark">#B71C1C</item>
        <item name="colorAccent">#FDCA00</item>
    </style>

    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#FDCA00</item>
        <item name="tabSelectedTextColor">#010100</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
        <item name="android:background">#E60005</item>
    </style>

    <!-- Text appearance style for a category tab -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
